generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum WorkflowType {
  company_setup
  custom_layout
}

enum ConversationStatus {
  active
  approved
  abandoned
}

model Company {
  id             String   @id @default(cuid())
  name           String
  apiKey         String   @unique
  isActive       Boolean  @default(true)
  primaryColor   String   @default("#2563eb") @db.VarChar(7)
  secondaryColor String   @default("#1e40af") @db.VarChar(7)
  tertiaryColor  String   @default("#60a5fa") @db.VarChar(7)
  logoUrl        String?  @db.VarChar(500)
  updatedBy      String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  botConversations BotConversation[]

  @@index([id])
  @@map("companies")
}

model Job {
  id                 String    @id @default(cuid())
  movewareJobId      String    @unique
  companyId          String
  customerId         String?
  customerName       String?
  status             String
  scheduledDate      DateTime?
  completedDate      DateTime?
  originAddress      String?
  destinationAddress String?
  data               String    @db.Text
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt

  @@index([companyId])
  @@index([movewareJobId])
  @@map("jobs")
}

model Quote {
  id              String    @id @default(cuid())
  quoteNumber     String    @unique
  jobId           String?
  companyId       String
  customerName    String
  customerEmail   String?
  customerPhone   String?
  status          String    @default("pending")
  totalAmount     Float
  validUntil      DateTime?
  termsAccepted   Boolean   @default(false)
  acceptedAt      DateTime?
  acceptedBy      String?
  signatureData   String?   @db.Text
  data            String    @db.Text
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([companyId])
  @@index([jobId])
  @@index([quoteNumber])
  @@map("quotes")
}

model Costing {
  id          String   @id @default(cuid())
  companyId   String
  name        String
  description String?
  category    String
  unitPrice   Float
  unit        String   @default("unit")
  isActive    Boolean  @default(true)
  data        String?  @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([companyId])
  @@index([category])
  @@map("costings")
}

model Activity {
  id             String    @id @default(cuid())
  jobId          String
  companyId      String
  movewareId     String?
  activityType   String
  description    String    @db.Text
  status         String
  assignedTo     String?
  scheduledDate  DateTime?
  completedDate  DateTime?
  notes          String?   @db.Text
  data           String?   @db.Text
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  @@index([jobId])
  @@index([companyId])
  @@map("activities")
}

model Inventory {
  id          String   @id @default(cuid())
  jobId       String
  companyId   String
  movewareId  String?
  itemName    String
  category    String?
  quantity    Int      @default(1)
  volume      Float?
  weight      Float?
  fragile     Boolean  @default(false)
  notes       String?  @db.Text
  room        String?
  data        String?  @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([jobId])
  @@index([companyId])
  @@map("inventory")
}

model HeroSettings {
  id              String   @id @default(cuid())
  companyId       String   @unique
  title           String
  subtitle        String?
  backgroundImage String?
  backgroundColor String   @default("#2563eb")
  textColor       String   @default("#ffffff")
  showLogo        Boolean  @default(true)
  alignment       String   @default("left")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([companyId])
  @@map("hero_settings")
}

model BrandingSettings {
  id             String   @id @default(cuid())
  companyId      String   @unique
  logoUrl        String?
  primaryColor   String   @default("#2563eb")
  secondaryColor String   @default("#1e40af")
  fontFamily     String   @default("Inter")
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([companyId])
  @@map("branding_settings")
}

model CopySettings {
  id               String   @id @default(cuid())
  companyId        String   @unique
  welcomeMessage   String
  introText        String   @db.Text
  footerText       String?
  submitButtonText String   @default("Submit")
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@index([companyId])
  @@map("copy_settings")
}

model ReviewSubmission {
  id          String   @id @default(cuid())
  jobId       String
  token       String
  brand       String?
  companyId   String?
  answers     String   @db.Text
  submittedAt DateTime @default(now())
  createdAt   DateTime @default(now())

  @@index([jobId])
  @@index([companyId])
  @@map("review_submissions")
}

model Conversation {
  id              String                @id @default(cuid())
  sessionId       String                @unique
  currentWorkflow String?
  metadata        Json                  @default("{}")
  status          String                @default("active")
  createdAt       DateTime              @default(now())
  updatedAt       DateTime              @updatedAt
  messages        ConversationMessage[]

  @@index([sessionId])
  @@index([status])
  @@map("conversations")
}

model ConversationMessage {
  id             String       @id @default(cuid())
  conversationId String
  role           String
  content        String       @db.Text
  metadata       Json         @default("{}")
  createdAt      DateTime     @default(now())
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@index([conversationId])
  @@map("conversation_messages")
}

model BotConversation {
  id         String             @id @default(cuid())
  companyId  String
  sessionId  String             @unique
  workflow   WorkflowType
  status     ConversationStatus @default(active)
  metadata   Json               @default("{}")
  createdAt  DateTime           @default(now())
  updatedAt  DateTime           @updatedAt
  company    Company            @relation(fields: [companyId], references: [id])
  messages   BotMessage[]

  @@index([companyId])
  @@index([sessionId])
  @@index([status])
  @@map("bot_conversations")
}

model BotMessage {
  id             String          @id @default(cuid())
  conversationId String
  role           String
  content        String          @db.Text
  metadata       Json            @default("{}")
  createdAt      DateTime        @default(now())
  conversation   BotConversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@index([conversationId])
  @@map("bot_messages")
}
