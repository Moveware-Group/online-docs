generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum WorkflowType {
  company_setup
  custom_layout
}

enum ConversationStatus {
  active
  approved
  abandoned
}

model Company {
  id             String   @id @default(cuid())
  name           String   @db.VarChar(255)
  apiKey         String   @unique
  tenantId       String   @db.VarChar(255)
  brandCode      String   @db.VarChar(255)
  isActive       Boolean  @default(true)
  primaryColor   String   @default("#2563eb") @db.VarChar(7)
  secondaryColor String   @default("#1e40af") @db.VarChar(7)
  tertiaryColor  String   @default("#60a5fa") @db.VarChar(7)
  logoUrl        String?  @db.VarChar(500)
  heroContent    String?  @db.Text
  copyContent    String?  @db.Text
  updatedBy      String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  botConversations  BotConversation[]
  brandingSettings  BrandingSettings?
  heroSettings      HeroSettings?
  copySettings      CopySettings?
  quotes            Quote[]

  @@unique([tenantId, brandCode])
  @@index([id])
  @@index([name])
  @@index([tenantId])
  @@map("companies")
}

model Quote {
  id              String    @id @default(cuid())
  quoteNumber     String    @unique
  companyId       String
  customerName    String
  customerEmail   String?
  customerPhone   String?
  status          String    @default("pending")
  totalAmount     Float
  validUntil      DateTime?
  termsAccepted   Boolean   @default(false)
  acceptedAt      DateTime?
  acceptedBy      String?
  signatureData   String?   @db.Text
  data            String    @db.Text
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@index([companyId])
  @@index([quoteNumber])
  @@map("quotes")
}

model HeroSettings {
  id              String   @id @default(cuid())
  companyId       String   @unique
  title           String
  subtitle        String?
  backgroundImage String?
  backgroundColor String   @default("#2563eb")
  textColor       String   @default("#ffffff")
  showLogo        Boolean  @default(true)
  alignment       String   @default("left")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@index([companyId])
  @@map("hero_settings")
}

model BrandingSettings {
  id             String   @id @default(cuid())
  companyId      String   @unique
  logoUrl        String?
  primaryColor   String   @default("#2563eb")
  secondaryColor String   @default("#1e40af")
  fontFamily     String   @default("Inter")
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@index([companyId])
  @@map("branding_settings")
}

model CopySettings {
  id               String   @id @default(cuid())
  companyId        String   @unique
  welcomeMessage   String
  introText        String   @db.Text
  footerText       String?
  submitButtonText String   @default("Submit")
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@index([companyId])
  @@map("copy_settings")
}

model ReviewSubmission {
  id          String   @id @default(cuid())
  quoteId     String?
  token       String
  companyId   String?
  answers     String   @db.Text
  submittedAt DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([quoteId])
  @@index([companyId])
  @@index([token])
  @@map("review_submissions")
}

model BotConversation {
  id           String             @id @default(cuid())
  companyId    String
  company      Company            @relation(fields: [companyId], references: [id], onDelete: Cascade)
  userId       String?
  status       ConversationStatus @default(active)
  workflowType WorkflowType?
  context      String?            @db.Text
  messages     String             @db.Text
  createdAt    DateTime           @default(now())
  updatedAt    DateTime           @updatedAt

  @@index([companyId])
  @@index([userId])
  @@index([status])
  @@map("bot_conversations")
}
