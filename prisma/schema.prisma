generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum WorkflowType {
  company_setup
  custom_layout
}

enum ConversationStatus {
  active
  approved
  abandoned
}

model Company {
  id             String   @id @default(cuid())
  name           String   @db.VarChar(255)
  apiKey         String   @unique @map("api_key")
  tenantId       String   @db.VarChar(255) @map("tenant_id")
  brandCode      String   @db.VarChar(255) @map("brand_code")
  isActive       Boolean  @default(true) @map("is_active")
  primaryColor   String   @default("#2563eb") @db.VarChar(7) @map("primary_color")
  secondaryColor String   @default("#1e40af") @db.VarChar(7) @map("secondary_color")
  tertiaryColor  String   @default("#60a5fa") @db.VarChar(7) @map("tertiary_color")
  logoUrl        String?  @db.VarChar(500) @map("logo_url")
  heroContent    String?  @db.Text @map("hero_content")
  copyContent    String?  @db.Text @map("copy_content")
  updatedBy      String?  @map("updated_by")
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  botConversations  BotConversation[]
  brandingSettings  BrandingSettings?
  heroSettings      HeroSettings?
  copySettings      CopySettings?
  quotes            Quote[]
  documentLayouts   CompanyDocumentLayout[]
  userAccess        UserCompany[]

  @@unique([tenantId, brandCode])
  @@index([id])
  @@index([name])
  @@index([tenantId])
  @@map("companies")
}

model Quote {
  id              String    @id @default(cuid())
  quoteNumber     String    @unique @map("quote_number")
  companyId       String    @map("company_id")
  customerName    String    @map("customer_name")
  customerEmail   String?   @map("customer_email")
  customerPhone   String?   @map("customer_phone")
  status          String    @default("pending")
  totalAmount     Float     @map("total_amount")
  validUntil      DateTime? @map("valid_until")
  termsAccepted   Boolean   @default(false) @map("terms_accepted")
  acceptedAt      DateTime? @map("accepted_at")
  acceptedBy      String?   @map("accepted_by")
  signatureData   String?   @db.Text @map("signature_data")
  data            String    @db.Text
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@index([companyId])
  @@index([quoteNumber])
  @@map("quotes")
}

model HeroSettings {
  id              String   @id @default(cuid())
  companyId       String   @unique @map("company_id")
  title           String
  subtitle        String?
  backgroundImage String?  @map("background_image")
  backgroundColor String   @default("#2563eb") @map("background_color")
  textColor       String   @default("#ffffff") @map("text_color")
  showLogo        Boolean  @default(true) @map("show_logo")
  alignment       String   @default("left")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@index([companyId])
  @@map("hero_settings")
}

model BrandingSettings {
  id                 String   @id @default(cuid())
  companyId          String   @unique @map("company_id")
  logoUrl            String?  @map("logo_url")
  heroBannerUrl      String?  @map("hero_banner_url") @db.VarChar(500)
  footerImageUrl     String?  @map("footer_image_url") @db.VarChar(500)
  primaryColor       String   @default("#2563eb") @map("primary_color")
  secondaryColor     String   @default("#1e40af") @map("secondary_color")
  fontFamily         String   @default("Inter") @map("font_family")
  layoutTemplateId   String?  @map("layout_template_id")
  mwUsername         String?  @map("mw_username") @db.VarChar(255)
  mwPassword         String?  @map("mw_password") @db.VarChar(500)
  createdAt          DateTime @default(now()) @map("created_at")
  updatedAt          DateTime @updatedAt @map("updated_at")

  company        Company         @relation(fields: [companyId], references: [id], onDelete: Cascade)
  layoutTemplate LayoutTemplate? @relation(fields: [layoutTemplateId], references: [id], onDelete: SetNull)

  @@index([companyId])
  @@index([layoutTemplateId])
  @@map("branding_settings")
}

// ---------------------------------------------------------------------------
// Layout Templates — named, reusable layout configs assignable to companies.
// ---------------------------------------------------------------------------
model LayoutTemplate {
  id              String   @id @default(cuid())
  name            String   @db.VarChar(255)
  description     String?  @db.Text
  layoutConfig    String   @db.Text
  version         Int      @default(1)
  isActive        Boolean  @default(true) @map("is_active")
  isDefault       Boolean  @default(false) @map("is_default")
  // Document type this template is designed for: quote | review | payment | document_request
  docType         String   @default("quote") @db.VarChar(50) @map("doc_type")
  createdBy       String?  @map("created_by")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  // Companies that have been assigned this template (legacy quote path)
  brandingSettings    BrandingSettings[]
  // Per-docType assignments
  companyDocLayouts   CompanyDocumentLayout[]

  @@index([name])
  @@index([docType])
  @@map("layout_templates")
}

// CompanyDocumentLayout — junction table linking a Company to a LayoutTemplate
// for a specific document type.
// The legacy quote layout is still stored in BrandingSettings.layoutTemplateId
// for backward compatibility. All other doc types (review, payment,
// document_request) use this table.
model CompanyDocumentLayout {
  id         String   @id @default(cuid())
  companyId  String   @map("company_id")
  // quote | review | payment | document_request
  docType    String   @db.VarChar(50) @map("doc_type")
  templateId String   @map("template_id")
  isActive   Boolean  @default(true) @map("is_active")
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  company  Company        @relation(fields: [companyId],  references: [id], onDelete: Cascade)
  template LayoutTemplate @relation(fields: [templateId], references: [id], onDelete: Cascade)

  @@unique([companyId, docType])
  @@index([companyId])
  @@index([docType])
  @@map("company_document_layouts")
}

// ---------------------------------------------------------------------------
// User / Role / Session models — for settings page access control
// ---------------------------------------------------------------------------

// Role defines what a user can do. System roles (admin, client) cannot be deleted.
model Role {
  id          String   @id @default(cuid())
  name        String   @unique @db.VarChar(100)
  description String?  @db.VarChar(500)
  // JSON array of permission strings, e.g. ["all"] or ["view_all_companies","manage_companies"]
  permissions String   @default("[]") @db.Text
  isSystem    Boolean  @default(false) @map("is_system")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  users User[]

  @@index([name])
  @@map("roles")
}

model User {
  id           String   @id @default(cuid())
  username     String   @unique @db.VarChar(100)
  email        String?  @unique @db.VarChar(255)
  name         String   @db.VarChar(255)
  passwordHash String   @map("password_hash") @db.VarChar(500)
  roleId       String   @map("role_id")
  isActive     Boolean  @default(true) @map("is_active")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  role      Role          @relation(fields: [roleId], references: [id])
  companies UserCompany[]
  sessions  UserSession[]

  @@index([username])
  @@index([email])
  @@index([roleId])
  @@map("users")
}

// Junction table: which companies a user can access
model UserCompany {
  userId    String   @map("user_id")
  companyId String   @map("company_id")
  createdAt DateTime @default(now()) @map("created_at")

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@id([userId, companyId])
  @@index([userId])
  @@index([companyId])
  @@map("user_companies")
}

// Server-side session tokens
model UserSession {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  token     String   @unique @db.VarChar(128)
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([userId])
  @@map("user_sessions")
}

model CopySettings {
  id               String   @id @default(cuid())
  companyId        String   @unique @map("company_id")
  welcomeMessage   String   @map("welcome_message")
  introText        String   @db.Text @map("intro_text")
  footerText       String?  @map("footer_text")
  submitButtonText String   @default("Submit") @map("submit_button_text")
  createdAt        DateTime @default(now()) @map("created_at")
  updatedAt        DateTime @updatedAt @map("updated_at")

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@index([companyId])
  @@map("copy_settings")
}

model ReviewSubmission {
  id          String   @id @default(cuid())
  quoteId     String?  @map("quote_id")
  token       String
  companyId   String?  @map("company_id")
  answers     String   @db.Text
  submittedAt DateTime @default(now()) @map("submitted_at")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@index([quoteId])
  @@index([companyId])
  @@index([token])
  @@map("review_submissions")
}


model BotConversation {
  id           String             @id @default(cuid())
  companyId    String             @map("company_id")
  company      Company            @relation(fields: [companyId], references: [id], onDelete: Cascade)
  userId       String?            @map("user_id")
  status       ConversationStatus @default(active)
  workflowType WorkflowType?      @map("workflow_type")
  context      String?            @db.Text
  messages     String             @db.Text
  createdAt    DateTime           @default(now()) @map("created_at")
  updatedAt    DateTime           @updatedAt @map("updated_at")

  @@index([companyId])
  @@index([userId])
  @@index([status])
  @@map("bot_conversations")
}
