generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum WorkflowType {
  company_setup
  custom_layout
}

enum ConversationStatus {
  active
  approved
  abandoned
}

model Company {
  id             String   @id @default(cuid())
  name           String   @db.VarChar(255)
  apiKey         String   @unique @map("api_key")
  tenantId       String   @db.VarChar(255) @map("tenant_id")
  brandCode      String   @db.VarChar(255) @map("brand_code")
  isActive       Boolean  @default(true) @map("is_active")
  primaryColor   String   @default("#2563eb") @db.VarChar(7) @map("primary_color")
  secondaryColor String   @default("#1e40af") @db.VarChar(7) @map("secondary_color")
  tertiaryColor  String   @default("#60a5fa") @db.VarChar(7) @map("tertiary_color")
  logoUrl        String?  @db.VarChar(500) @map("logo_url")
  heroContent    String?  @db.Text @map("hero_content")
  copyContent    String?  @db.Text @map("copy_content")
  updatedBy      String?  @map("updated_by")
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  botConversations  BotConversation[]
  brandingSettings  BrandingSettings?
  heroSettings      HeroSettings?
  copySettings      CopySettings?
  quotes            Quote[]
  customLayout      CustomLayout?

  @@unique([tenantId, brandCode])
  @@index([id])
  @@index([name])
  @@index([tenantId])
  @@map("companies")
}

model Quote {
  id              String    @id @default(cuid())
  quoteNumber     String    @unique @map("quote_number")
  companyId       String    @map("company_id")
  customerName    String    @map("customer_name")
  customerEmail   String?   @map("customer_email")
  customerPhone   String?   @map("customer_phone")
  status          String    @default("pending")
  totalAmount     Float     @map("total_amount")
  validUntil      DateTime? @map("valid_until")
  termsAccepted   Boolean   @default(false) @map("terms_accepted")
  acceptedAt      DateTime? @map("accepted_at")
  acceptedBy      String?   @map("accepted_by")
  signatureData   String?   @db.Text @map("signature_data")
  data            String    @db.Text
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@index([companyId])
  @@index([quoteNumber])
  @@map("quotes")
}

model HeroSettings {
  id              String   @id @default(cuid())
  companyId       String   @unique @map("company_id")
  title           String
  subtitle        String?
  backgroundImage String?  @map("background_image")
  backgroundColor String   @default("#2563eb") @map("background_color")
  textColor       String   @default("#ffffff") @map("text_color")
  showLogo        Boolean  @default(true) @map("show_logo")
  alignment       String   @default("left")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@index([companyId])
  @@map("hero_settings")
}

model BrandingSettings {
  id             String   @id @default(cuid())
  companyId      String   @unique @map("company_id")
  logoUrl        String?  @map("logo_url")
  primaryColor   String   @default("#2563eb") @map("primary_color")
  secondaryColor String   @default("#1e40af") @map("secondary_color")
  fontFamily     String   @default("Inter") @map("font_family")
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@index([companyId])
  @@map("branding_settings")
}

model CopySettings {
  id               String   @id @default(cuid())
  companyId        String   @unique @map("company_id")
  welcomeMessage   String   @map("welcome_message")
  introText        String   @db.Text @map("intro_text")
  footerText       String?  @map("footer_text")
  submitButtonText String   @default("Submit") @map("submit_button_text")
  createdAt        DateTime @default(now()) @map("created_at")
  updatedAt        DateTime @updatedAt @map("updated_at")

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@index([companyId])
  @@map("copy_settings")
}

model ReviewSubmission {
  id          String   @id @default(cuid())
  quoteId     String?  @map("quote_id")
  token       String
  companyId   String?  @map("company_id")
  answers     String   @db.Text
  submittedAt DateTime @default(now()) @map("submitted_at")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@index([quoteId])
  @@index([companyId])
  @@index([token])
  @@map("review_submissions")
}

model CustomLayout {
  id             String   @id @default(cuid())
  companyId      String   @unique @map("company_id")
  company        Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)
  layoutConfig   String   @db.Text
  referenceUrl   String?  @db.VarChar(2000) @map("reference_url")
  referenceFile  String?  @db.VarChar(500) @map("reference_file")
  description    String?  @db.Text
  version        Int      @default(1)
  isActive       Boolean  @default(true) @map("is_active")
  conversationId String?  @map("conversation_id")
  createdBy      String?  @map("created_by")
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  @@index([companyId])
  @@map("custom_layouts")
}

model BotConversation {
  id           String             @id @default(cuid())
  companyId    String             @map("company_id")
  company      Company            @relation(fields: [companyId], references: [id], onDelete: Cascade)
  userId       String?            @map("user_id")
  status       ConversationStatus @default(active)
  workflowType WorkflowType?      @map("workflow_type")
  context      String?            @db.Text
  messages     String             @db.Text
  createdAt    DateTime           @default(now()) @map("created_at")
  updatedAt    DateTime           @updatedAt @map("updated_at")

  @@index([companyId])
  @@index([userId])
  @@index([status])
  @@map("bot_conversations")
}
